<html>
<head>
    <title>JsTuto</title>
    <link rel="stylesheet/less" type="text/css" href="Content/main.less" />
    <link rel="stylesheet" type="text/css" href="Content/bootstrap/css/bootstrap.css" />

    <script src="Scripts/vendors/less.js" type="text/javascript"></script>
    <script src="Scripts/vendors/jquery-2.1.4.js" type="text/javascript"></script>
    <script type="text/javascript" data-main="Scripts/main.js" src="Scripts/require.js"></script>
</head>
<body id="main">
    <nav id="toolbar" class="navbar navbar-inverse">
        <div class="container-fluid">
            <a href="#" class="navbar-brand navbar-left">JsTuto</a>
            <form class="navbar-right" method="POST" action="#/columns">
                <button type="submit" class="btn btn-primary "><i class="icon-plus-sign"></i> Add column</button>
            </form>
        </div>
    </nav>
    <section id="board">
        <div class="wrapper" data-bind="style:{width: wrapperSize}, sortable: {data:columns, connectClass: 'column'}">
            <section class="column">
                <header>
                    <input type="text" data-bind="value:name">
                </header>
                <div class="wrapper" data-bind="sortable:tasks">
                    <div data-bind="css:{done: done},event: {dblclick: enableEdit}">
                        <input type="checkbox" data-bind="checked: done">
                        <!-- ko if: edit -->
                        <input type="text" data-bind="value:name, event: {blur: disableEdit}">
                        <!-- /ko -->
                        <!-- ko ifnot: edit -->
                        <span data-bind="text: name"></span>
                        <!-- /ko -->
                    </div>
                </div>
                <footer>
                    <form method="POST" data-bind="attr:{action: addTaskAction}" class="pull-right">
                        <button type="submit" class="btn btn-primary"><i class="icon-plus-sign"></i> Add todo</button>
                    </form>
                    <form method="DELETE" data-bind="attr:{action: addTaskAction}" class="pull-left">
                        <button type="submit" class="btn btn-danger"><i class="icon-minus-sign"></i> Remove column</button>
                    </form>
                </footer>
            </section>
        </div>
    </section>
    <footer class="container">
        <div class="navbar navbar-inverse navbar-fixed-bottom">
            <div class="container-fluid">
                <span class="navbar-right navbar-brand">Still <span data-bind="text:todo"></span> tasks left</span>
            </div>
        </div>
    </footer>
</body>
</html>